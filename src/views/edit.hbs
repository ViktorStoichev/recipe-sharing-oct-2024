<section id="recipe-form">
    <h2>Edit Recipe</h2>
    <form method="POST" id="new-recipe">
        <div>
            <label for="title">Recipe Title</label>
            <input type="text" id="title" name="title" value="{{recipe.title}}" required>
        </div>
        <div>
            <label for="photo">Recipe Photo URL</label>
            <input type="text" id="photo" name="imageUrl" value="{{recipe.imageUrl}}" required>
        </div>
        <div>
            <label for="ingredients">Ingredients</label>
            <textarea id="ingredients" name="ingredients" rows="4" required>{{recipe.ingredients}}</textarea>
        </div>
        <div>
            <label for="instructions">Instructions</label>
            <textarea id="instructions" name="instructions" rows="6" required>{{recipe.instructions}}</textarea>
        </div>
        <button type="submit">Add Recipe</button>
    </form>
</section>